<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/black"
    android:layout_height="wrap_content"
    android:padding="8dp"
    app:layout_constraintCircleRadius="20dp">

    <ImageView
        android:id="@+id/imageOrderItem"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="300dp"
        android:layout_marginRight="300dp"
        app:layout_constraintCircleRadius="5dp"
        app:layout_constraintDimensionRatio="H,1:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/avatars" />

    <TextView
        android:id="@+id/titleOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:text="Title"

        android:textColor="@color/light_gray"
        android:textSize="16dp"
        app:layout_constraintStart_toEndOf="@+id/imageOrderItem"
        app:layout_constraintTop_toTopOf="@+id/imageOrderItem" />

    <TextView
        android:id="@+id/priceOrderItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Price"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintStart_toEndOf="@+id/imageOrderItem"
        app:layout_constraintTop_toBottomOf="@+id/titleOrderItem" />

    <TextView
        android:id="@+id/count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="Count"
        android:textColor="@color/light_gray"
        app:layout_constraintStart_toEndOf="@+id/imageOrderItem"
        app:layout_constraintTop_toBottomOf="@+id/priceOrderItem" />

</androidx.constraintlayout.widget.ConstraintLayout>